
@prefix rr:  <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql:  <http://semweb.mmlab.be/ns/ql#> .
@prefix ex:  <http://example.org/gtfs/> .
@prefix gtfs: <http://vocab.gtfs.org/terms#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

# Logical source: CSV of stops
<#LSStops> a rml:LogicalSource ;
  rml:source "../csv/stops-with-links.csv" ;
  rml:referenceFormulation ql:CSV .

# TriplesMap for stops
<#TMStops> a rr:TriplesMap ;
  rml:logicalSource <#LSStops> ;
  rr:subjectMap [
    rr:template "http://example.org/gtfs/stop/{stop_id}" ;
    rr:class gtfs:Stop
  ] ;
  rr:predicateObjectMap [
    rr:predicate gtfs:stopName ;
    rr:objectMap [ rml:reference "stop_name" ]
  ] ;
  rr:predicateObjectMap [
    rr:predicate schema:latitude ;
    rr:objectMap [ rml:reference "stop_lat" ; rr:datatype xsd:decimal ]
  ] ;
  rr:predicateObjectMap [
    rr:predicate schema:longitude ;
    rr:objectMap [ rml:reference "stop_lon" ; rr:datatype xsd:decimal ]
  ] ;
  rr:predicateObjectMap [
    rr:predicate ex:inCity ;
    rr:objectMap [ rr:template "http://example.org/gtfs/city/{city_label}" ]
  ] .

# TriplesMap for City (declared once per row; same URI so it's OK)
<#TMCity> a rr:TriplesMap ;
  rml:logicalSource <#LSStops> ;
  rr:subjectMap [ rr:template "http://example.org/gtfs/city/{city_label}" ; rr:class schema:City ] ;
  rr:predicateObjectMap [
    rr:predicate rdfs:label ;
    rr:objectMap [ rml:reference "city_label" ]
  ] ;
  rr:predicateObjectMap [
    rr:predicate owl:sameAs ;
    rr:objectMap [ rr:constant <http://www.wikidata.org/entity/Q2807> ]
  ] ;
  rr:predicateObjectMap [
    rr:predicate owl:sameAs ;
    rr:objectMap [ rr:constant <http://dbpedia.org/resource/Madrid> ]
  ] .

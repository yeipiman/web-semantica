@prefix :       <http://group24.linkeddata.es/ontology/> .
@prefix ex:     <http://group24.linkeddata.es/ontology/> .
@prefix res:    <http://group24.linkeddata.es/resource/> .
@prefix dcat:   <http://www.w3.org/ns/dcat#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix geo:    <http://www.w3.org/2003/01/geo/wgs84_pos#> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sosa:   <http://www.w3.org/ns/sosa/> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# Ontology header
#################################################################

<http://group24.linkeddata.es/ontology/>
    a owl:Ontology ;
    dct:title "Urban Environmental Ontology (Group24)"@en ;
    dct:description "Lightweight ontology to describe districts, tree observations, air-quality observations (NO2), and environmental expenditure records."@en ;
    dct:creator "Group24" ;
    owl:versionInfo "1.0.1" ;
    rdfs:seeAlso <http://group24.linkeddata.es/> .

#################################################################
# Core Classes
#################################################################

ex:District a owl:Class ;
    rdfs:label "District"@en ;
    rdfs:comment "Administrative district in Madrid for tree observations."@en .

ex:TreeObservation a owl:Class ;
    rdfs:label "Tree Observation"@en ;
    rdfs:comment "Observation of a specific tree species count within a district."@en ;
    rdfs:subClassOf ex:Observation .

ex:Area a owl:Class ;
    rdfs:label "Area"@en ;
    rdfs:comment "Generic geographic area (municipality, district, country)."@en ;
    rdfs:subClassOf sosa:FeatureOfInterest .

ex:Observation a owl:Class ;
    rdfs:label "Observation"@en ;
    rdfs:comment "Generic observation with a value, time, and observed property."@en ;
    rdfs:subClassOf sosa:Observation .

ex:NO2Observation a owl:Class ;
    rdfs:label "NO2 Observation"@en ;
    rdfs:subClassOf ex:Observation .

ex:ExpenditureRecord a owl:Class ;
    rdfs:label "Environmental Expenditure Record"@en ;
    rdfs:comment "Record for environmental protection expenditure (national or regional aggregates)."@en .

ex:ObservedProperty a owl:Class ;
    rdfs:label "Observed Property"@en ;
    rdfs:comment "Property being observed (e.g., NO2, TreeCount, Expenditure)."@en ;
    rdfs:subClassOf sosa:ObservableProperty .

#################################################################
# Properties (Object)
#################################################################

ex:featureOfInterest a owl:ObjectProperty ;
    rdfs:label "feature of interest"@en ;
    rdfs:comment "The feature that the observation is about (district, area, etc.)."@en ;
    rdfs:domain ex:Observation ;
    rdfs:range sosa:FeatureOfInterest ;
    rdfs:subPropertyOf sosa:hasFeatureOfInterest .

ex:observedProperty a owl:ObjectProperty ;
    rdfs:label "observed property"@en ;
    rdfs:domain ex:Observation ;
    rdfs:range ex:ObservedProperty ;
    rdfs:subPropertyOf sosa:observedProperty .

ex:inDataset a owl:ObjectProperty ;
    rdfs:label "in dataset"@en ;
    rdfs:domain rdfs:Resource ;
    rdfs:range dcat:Dataset .

#################################################################
# Properties (Datatype)
#################################################################

ex:value a owl:DatatypeProperty ;
    rdfs:label "value"@en ;
    rdfs:comment "Numeric value of the observation/record."@en ;
    rdfs:domain ex:Observation ;
    rdfs:range xsd:decimal ;
    rdfs:subPropertyOf sosa:hasSimpleResult .

ex:unit a owl:DatatypeProperty ;
    rdfs:label "unit"@en ;
    rdfs:comment "Unit of measurement for the value (free-text or URI if using QUDT/OM)."@en ;
    rdfs:domain ex:Observation ;
    rdfs:range xsd:string .

ex:resultTime a owl:DatatypeProperty ;
    rdfs:label "result time"@en ;
    rdfs:comment "Time when the result is available (use date or dateTime as needed)."@en ;
    rdfs:domain ex:Observation ;
    rdfs:range xsd:date .

ex:year a owl:DatatypeProperty ;
    rdfs:label "year"@en ;
    rdfs:comment "Convenience year value for time-series observations."@en ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:gYear .

ex:treeSpecies a owl:DatatypeProperty ;
    rdfs:label "tree species"@en ;
    rdfs:comment "Species name of the observed trees."@en ;
    rdfs:domain ex:TreeObservation ;
    rdfs:range xsd:string .

ex:concept a owl:DatatypeProperty ;
    rdfs:label "concept/indicator label"@en ;
    rdfs:comment "Label from the statistical series (e.g., indicator name)."@en ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:string .

ex:dataStatus a owl:DatatypeProperty ;
    rdfs:label "data status"@en ;
    rdfs:comment "Status flag from the statistical file (if provided)."@en ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:string .

ex:label a owl:DatatypeProperty ;
    rdfs:label "label"@en ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:string ;
    rdfs:subPropertyOf rdfs:label .

#################################################################
# Canonical observed properties (instances)
#################################################################

res:prop/NO2 a ex:ObservedProperty ;
    rdfs:label "Nitrogen Dioxide (NO2)"@en .

res:prop/TreeCount a ex:ObservedProperty ;
    rdfs:label "Tree Count"@en .

res:prop/Expenditure a ex:ObservedProperty ;
    rdfs:label "Environmental Protection Expenditure"@en .
